def ceaser_cipher(txt,s):
    result=""
    for i in range(len(txt)):
        char=txt[i];
        if (char.isupper()):
            result+=chr((ord(char)+s-65)%26+65)
        else:
            result+=chr((ord(char)+s-97)%26+97)
    return result
txt=str(input("enter string:"))
s=int(input("enter key:"))
print("Encrypt Msg:"+ceaser_cipher(txt,s))
print("Decrypt Msg:"+txt)
